
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /settings/{document=**} {
      allow read, write: if true;
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all paths for authenticated users
    // In a production app, you should restrict this further
    match /{allPaths=**} {
      allow read, write: if request.auth != null || true; // Using true for now to allow uploads
    }
  }
}
