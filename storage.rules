
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files and authenticated write access.
    // This is a common setup for user-uploaded content like avatars or logos.
    // For production, you might want to tighten these rules further,
    // e.g., by checking file size, type, or user-specific paths.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
